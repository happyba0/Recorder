<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"    
    android:background="#f0f5fa"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="19">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#1192cb">
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="文件浏览"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:gravity="center"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#1192cb"
        android:orientation="horizontal"
        android:weightSum="6">
        <ImageButton
         android:id="@+id/file_back1"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_alignBottom="@+id/surfaceView1"
         android:layout_alignRight="@+id/surfaceView1"
         android:src="@drawable/back" 
         android:scaleType="fitXY" 
         android:background="#e0000000" />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#1192cb">
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15.4"
        android:orientation="vertical"
        android:background="#00BFFF">
          <ListView
	        android:id="@+id/file_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"       
	        android:divider="@drawable/shape_line"
	        android:dividerHeight="1px">
    </ListView>
       </LinearLayout>
</LinearLayout>